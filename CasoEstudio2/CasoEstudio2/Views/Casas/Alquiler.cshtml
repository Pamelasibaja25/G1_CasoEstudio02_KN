@model CasoEstudio2.Models.CasasModel

@{
    ViewBag.Title = "Alquiler de casas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xl-2"></div>

    <div class="col-xl-8">
        <div class="card mb-4 mt-4">

            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-primary text-center">
                    @ViewBag.Mensaje
                </div>
            }

            <h5 class="card-header">Alquiler de casas</h5>

            @using (Html.BeginForm("Alquiler", "Casas", FormMethod.Post, new { id = "FormAlquiler" }))
            {
                <div class="card-body">

                    <div class="mb-3">
                        <label class="form-label">Casa</label>
                        @Html.DropDownListFor(x => x.IdCasa,
                            ViewBag.ListaCasas as List<SelectListItem>,
                            new { @class = "form-control", id = "IdCasa" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Precio</label>
                        @Html.TextBoxFor(x => x.PrecioCasa,
                            new { @class = "form-control", id = "PrecioCasa", @readonly = "readonly" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Usuario alquiler</label>
                        @Html.TextBoxFor(x => x.UsuarioAlquiler,
                            new { @class = "form-control", id = "UsuarioAlquiler", placeholder = "Nombre del usuario" })
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary w-25">Alquilar</button>
                    </div>

                </div>
            }
        </div>
    </div>

    <div class="col-xl-2"></div>
</div>

<script src="~/StaticFile/casas.js"></script>